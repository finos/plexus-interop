{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist/main",
        "rootDir": ".",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "importHelpers": true,
        "listFiles": false,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "pretty": true,
        "lib": [
            "es6", "dom"
        ],
        "types": [
            "jest",
            "long",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "plexus-transport-common": ["src/index.ts"]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compileOnSave": false
}